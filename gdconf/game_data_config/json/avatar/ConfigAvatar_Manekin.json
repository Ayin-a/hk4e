				},
				"ShowWeapon":
				{
					"$type": "ConfigAvatarStateIDInfo",
					"animatorStates":
					{
						"ShowWeapon": [],
						"ShowWeapon_AS": ["Common_ShowWeapon_AS"],
					},
					"battouOnStart" : true,
				},
				"ShowRelic":
				{
					"$type": "ConfigAvatarStateIDInfo",
					"animatorStates":
					{
						"ShowRelic": ["Emo_Avatar_Common_Manekin_RelicShowLoop"],
						"ShowRelic_AS": ["Emo_Avatar_Common_Manekin_RelicShowAS"],
					},
					"sheatheOnStart": true,
