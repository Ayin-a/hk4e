{
	"$type": "ConfigAvatar",
	"common":
	{
		"effectAttachShape":
		{
			"$type": "ConfigEffectAttachSkinnedMesh",
			"mesh": "EffectMesh",
		},
		"mass": 10.0,
		"affectedByWorld": true,
		"checkInSurface": false,
	},
	"headControl":
	{
		"$type": "ConfigHeadControl",
		"useHeadControl": true,
		"useWhiteAnimStates": false
	},
	"equipController":
	{
		"attachPoints":
		{
			"equip01": "WeaponR",
			"equip02": "WeaponL"
		},
		"sheathPoint": "WeaponBackPut",
