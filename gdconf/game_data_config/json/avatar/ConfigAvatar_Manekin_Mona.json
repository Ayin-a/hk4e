						"Skill_AS": ["Emo_Avatar_Mona_UI_Talent_Think_01AS"],
					},
					"setAnimatorBoolean":
					[
						// {
						// 	"name" : "&GotoAction",
						// 	"normalizeStart":0.0,
						// },
						// {
						// 	"name" : "&GotoAnyState",
						// 	"normalizeStart":0.91,
						// },
					],
				},
