					{
						"text": "Stop_ui_standbyShow_mona_elementalArt"
					},
					"otherStateNames": [],
					"usage": "Any"
				},
				{
					"currentStateName": "Show02",
					"audioEvent":
					{
						"text": "Stop_sfx_standbyShow_mona_cloth"
